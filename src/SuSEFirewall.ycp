/**
 * Sets all known devices as a list of devices into the
 * known_devices list.
 */
define void SetKnownDevices () ``{
    // FIXME: ISDN::NetDeviceList() is there because NetworkDevices doesn't know Just configured ISDN
    known_devices = (list<string>) toset(union(NetworkDevices::List(""), ISDN::NetDeviceList()));
    known_devices = filter(string dev, known_devices, ``{
	return dev != "" && !issubstring(dev, "lo") && !issubstring(dev, "sit");
    });
}

/**
 * Removes the device from the list of devices
 *
 * @param list<string>	devices
 * @param string	device to remove
 * @return list<string>	devices
 */
define list<string> RemoveDevice (list<string> remove_from, string remove_device) ``{
    return filter(string one_device, remove_from, ``{
	return one_device != remove_device;
    });
}

/**
 * Propose Firewall settings
 */
global define void Propose () ``{
    SetModified();
    list<string> known_devices_in_previous_run = known_devices;
    SetKnownDevices();

    y2milestone("Initializing proposal");
    
    // All "dialup" network devices
    // Bugzilla #44656 - only network devices are protected by default
    list<string> netdevices = (list<string>) toset(union(NetworkDevices::List("dialup"), ISDN::NetDeviceList()));
    netdevices = filter(string dev, netdevices, ``{
	return dev != "" && !issubstring(dev, "lo") && !issubstring(dev, "sit");
    });

    list<string> non_dialup_netdevices = (list<string>) toset(union(NetworkDevices::List(""), ISDN::NetDeviceList()));
    non_dialup_netdevices = filter(string dev, non_dialup_netdevices, ``{
	return dev != "" && !issubstring(dev, "lo") && !issubstring(dev, "sit") && !contains(netdevices, dev);
    });

    // Firewall is disabled if there is no network -- changing the defaults
    if (size(netdevices)==0 && size(non_dialup_netdevices)==0) {
	SuSEFirewall::enable_firewall = false;
	// some devices (all) could be removed
	return;
    // Devices were added, firewall would be enabled now
    } else if (size(known_devices_in_previous_run)==0) {
	// initializing to the default value
	SuSEFirewall::enable_firewall = SuSEFirewall::enable_firewall_init_default;
    }

    // if no dialup devices, all of them are proposed to be external
    if (size(netdevices)==0) {
	settings["FW_DEV_EXT"] = mergestring(sort((list<string>) union(netdevices, non_dialup_netdevices)), " ");
	settings["FW_DEV_INT"] = "";
	settings["FW_DEV_DMZ"] = "";
    // else dialup are external and other are internal
    } else {
	settings["FW_DEV_EXT"] = mergestring(sort(netdevices), " ");
	settings["FW_DEV_INT"] = mergestring(sort(non_dialup_netdevices), " ");
	settings["FW_DEV_DMZ"] = "";
    }

    // list of Open TCP ports
    list<string> allowed_tcp_ports = [];
    // SSH installation opens SSH in firewall by default, only if user didn't disable it
    if ((Linuxrc::usessh ()==true) && (open_ssh_port!=false)) {
	allowed_tcp_ports = add(allowed_tcp_ports, "ssh");
    }
    // VNC installation or Alowed Remote administration opens VNC in firewall by default
    if ((Linuxrc::vnc ()==true) || (Remote::allow_administration==true)) {
	allowed_tcp_ports = add(allowed_tcp_ports, "5801 5901");
    }

    // SSH should be open by default [after meeting with aj, kkaempf 2004-07-29]
    // disabled 2004-08-24 according to Bugzilla #44125
    // enabled  2004-09-08 according to Bugzilla #44125 && Bugzilla #44656
    if (open_ssh_port) {
	allowed_tcp_ports = add(allowed_tcp_ports, "ssh");
    }

    // list of Open UDP ports
    list<string> allowed_udp_ports = [];

    // No services are allowed by default, excepting allowed_tcp_ports for EXT_TCP
    settings["FW_SERVICES_EXT_IP"] = "";
    settings["FW_SERVICES_EXT_TCP"] = mergestring(toset(allowed_tcp_ports), " ");
    settings["FW_SERVICES_EXT_UDP"] = mergestring(toset(allowed_udp_ports), " ");

    settings["FW_SERVICES_INT_IP"] = "";
    settings["FW_SERVICES_INT_TCP"] = "";
    settings["FW_SERVICES_INT_UDP"] = "";
    
    settings["FW_SERVICES_DMZ_IP"] = "";
    settings["FW_SERVICES_DMZ_TCP"] = "";
    settings["FW_SERVICES_DMZ_UDP"] = "";

    // We don't do any masquerade or route by default
    settings["FW_MASQUERADE"] = "no";
    settings["FW_MASQ_NETS"] = "";
    settings["FW_ROUTE"] = "no";

    // ICMP is allowed
    settings["FW_ALLOW_FW_TRACEROUTE"] = "yes";

    // We don't trust any IPsec
    settings["FW_IPSEC_TRUST"] = "no";

    // external devices are dialup devices, other are internal by default
    settings["FW_PROTECT_FROM_INTERNAL"] = "no";

    // All services are auto-protected by default
    settings["FW_AUTOPROTECT_SERVICES"] = "no";

    // All critical packets are logged
    settings["FW_LOG_ACCEPT_ALL"] = "no";
    settings["FW_LOG_ACCEPT_CRIT"] = "yes";
    settings["FW_LOG_DROP_ALL"] = "no";
    settings["FW_LOG_DROP_CRIT"] = "yes";
}

/**
 * Reset Firewall settings
 */
global define void Reset () ``{
    if (Mode::autoinst ())
	return;

    if (! Mode::config ())
	Propose();
    else
	Read();
}

/**
 * Returns Preformatted text for proposal
 */
global define map<string, string> GetPreformattedProposal () {
    string ret = "<ul>";

    // TRANSLATORS: Proposal rich text item, %1 is the firewall status - enabled or disabled
    ret = ret + sformat(_("<li>Firewall is %1</li>"),
	(SuSEFirewall::enable_firewall ?
	    // TRANSLATORS: Proposal rich text item value - Firewall is enabled
	    sformat("<a href=\"firewall--disable_firewall_in_proposal\">%1</a>", _("enabled"))
	    :
	    // TRANSLATORS: Proposal rich text item value - Firewall is disabled
	    sformat("<a href=\"firewall--enable_firewall_in_proposal\">%1</a>", _("disabled"))
	)
    );

    if (SuSEFirewall::enable_firewall == true) {
	if (settings["FW_DEV_EXT"]:"" != "") {
	    ret = ret + "<li>" + sformat (
		// TRANSLATORS: Proposal rich text item, %1 is list of External interfaces
		_("External Interfaces: %1"),
		String::EscapeTags(settings["FW_DEV_EXT"]:"")
	    ) + "</li>";
	}
	if (settings["FW_DEV_INT"]:"" != "") {
	    ret = ret + "<li>" + sformat (
		// TRANSLATORS: Proposal rich text item, %1 is list of Internal interfaces
		_("Internal Interfaces: %1"),
		String::EscapeTags(settings["FW_DEV_INT"]:"")
	    ) + "</li>";
	}

	boolean ssh_is_enabled = false;

	// TCP ports
	list<string> list_open_tcp_ports = (splitstring(settings["FW_SERVICES_EXT_TCP"]:"", " "));
	// checking for VNC ports (wanted by aj), VNC ports are not registered in IANA services
	if (contains(list_open_tcp_ports, "5801") && contains(list_open_tcp_ports, "5901")) {
	    list_open_tcp_ports = filter(string open_port, list_open_tcp_ports, {
		return open_port != "5801" && open_port != "5901";
	    });
	    list_open_tcp_ports = add(list_open_tcp_ports, "VNC(5801 5901)");
	}
	if (contains(list_open_tcp_ports, "22") || contains(list_open_tcp_ports, "ssh")) {
	    list_open_tcp_ports = filter(string open_port, list_open_tcp_ports, {
		return open_port != "ssh" && open_port != "22";
	    });
	    ssh_is_enabled = true;
	}
	list_open_tcp_ports = filter(string open_port, list_open_tcp_ports, { return open_port != ""; });

	// UDP Ports
	list<string> list_open_udp_ports = (splitstring(settings["FW_SERVICES_EXT_UDP"]:"", " "));
	list_open_udp_ports = filter(string open_port, list_open_udp_ports, { return open_port != ""; });

	ret = ret + sformat("<li>SSH: %1</li>",
	    (ssh_is_enabled ?
		// Proposal rich text value ssh: enabled
		sformat("<a href=\"firewall--disable_ssh_in_proposal\">%1</a>", _("enabled"))
		:
		// Proposal rich text value ssh: disabled
		sformat("<a href=\"firewall--enable_ssh_in_proposal\">%1</a>", _("disabled"))
	    )
	);

	// TCP and UDP Ports together
	string open_ports = mergestring(toset ((list<string>) union(list_open_tcp_ports, list_open_udp_ports)), " ");
	ret = ret + sformat("<li>%1 %2</li>",
	    // TRANSLATORS: Proposal rich text item
	    _("Additional Services:"),
	    (open_ports != "" ?
		// TRANSLATORS: Proposal rich text - Additional Services: none
		String::EscapeTags(open_ports) : _("none")
	    )
	);

// disabled 2004-09-08
//	// TRANSLATORS: Proposal rich text item, %1 is list of open TCP ports
//	ret = ret + sformat(_("<li>Open TCP Ports: %1</li>"),
//	    (open_tcp_ports != "" ?
//		open_tcp_ports
//		:
//		// TRANSLATORS: Proposal rich text - Opened ports: none
//		_("none")
//	    )
//	// TRANSLATORS: Proposal rich text item, %1 is list of open UDP ports
//	) + sformat(_("<li>Open UDP Ports: %1</li>"),
//	    (open_udp_ports != "" ?
//		open_udp_ports
//		:
//		// TRANSLATORS: Proposal rich text - Opened UDP ports: none
//		_("none")
//	    )
//	);
    }

    string warning = "";
    if (SuSEFirewall::enable_firewall == true) {
	foreach (string warning_item, proposal_warnings, {
	    warning = warning + "<li>" + warning_item + "</li>";
	});
	if (warning != "") {
	    warning = "<ul>" + warning + "</ul>";
	}
    }
